@page
@model MascotaFeliz.App.Frontend.Pages.ListaMascotaModel
@{
}
<h1>Lista de las mascotas</h1>
<table class="" >
    @foreach (var mascota in Model.listaMascota)
    {
        <tr>
            <td>@mascota.Nombre</td>
            <td>@mascota.Color</td>
            <td>@mascota.Especie</td>
            
            <td>
                <a class="btn  btn-primary table-btn" asp-page=".\DetalleMascota" asp-route-mascotaId="@mascota.Id" >Detalle Mascota</a>
            </td>
            <td>
                <a class="btn  btn-primary table-btn" asp-page=".\EditarMascota" asp-route-mascotaId="@mascota.Id">Editar  Mascota</a>
            </td>
            <td>
                <a class="btn  btn-primary table-btn" asp-page=".\DeleteMascota" asp-route-mascotaId="@mascota.Id">Borrar  Mascota</a>
            </td>

        </tr>
    
    }
</table>
<a class="btn  btn-primary table-btn" asp-page=".\EditarMascota" >Editar  Mascota</a>