<div class="container1">
    <div class="card">
        <div class="titlecard">
            <h1>Detalle @Model.mascota.Nombre</h1>

        </div>
        <div class="content">
            <div class="details">
                <i class="fa-solid fa-dog"></i>
                ID: @Model.mascota.Id
            </div>

            <div class="details">
                <i class="fa-solid fa-dog"></i>
                Nombre: @Model.mascota.Nombre
            </div>

            <div class="details">
                <i class="fa-solid fa-dog"></i>
                Color: @Model.mascota.Color
            </div>

            <div class="details">
                <i class="fa-solid fa-dog"></i>
                Especie: @Model.mascota.Especie
            </div>

            <div class="details">
                <i class="fa-solid fa-dog"></i>
                Nombre del veterinario: @Model.mascota.Veterinario.Nombres
            </div>

            <div class="details">
                <i class="fa-solid fa-dog"></i>
                Nombre del Dueño: @Model.mascota.Dueno.Nombres
            </div>


            <div class="details">
                <i class="fa-solid fa-dog"></i>
                En esta sección se encuentran las visitas de la mascota de la Historia clinica
                @Model.mascota.Historia.Id
                <br />
                @Model.mascota.Nombre
                <br />
                @Model.mascota.Historia.FechaInicial
            </div>






            <div class="volverbtn">
                <a class="btn-new" asp-page="/Mascota/ListaMascota" asp-route-duenoId="">Volver</a>
            </div>
        </div>

    </div>
</div>


