                    </tr>
                    <tr>
                        <td>IdVeterinario @visitas.IdVeterinario </td>
                    </tr>
                    <tr>
                        <td>Recomendaciones : @visitas.Recomendaciones</td>
                    </tr>



                </table>
                <div class="volverbtn">
                    <a class="btn-new" asp-page="/VisitaPyP/AgregarVisita" asp-route-visita="@visitas.Id">Editar</a>
