@page
@model MascotaFeliz.App.Frontend.Pages.ListaVeterinarioModel
@{
}


<h1>Lista de veterinarios</h1>
<table class="" >
    @foreach (var veterinario in Model.listaVeterinario)
    {
        <tr>
            <td>@veterinario.Id</td>
            <td>@veterinario.Nombres</td>
            <td>@veterinario.Apellidos</td>
            <td>@veterinario.Direccion</td>
            <td>@veterinario.Telefono</td>
            <td>@veterinario.TarjetaProfesional</td>
              <td>
                <a class="btn  btn-primary table-btn" asp-page=".\DetalleVeterinario" asp-route-veterinarioId="@veterinario.Id" >Detalle Veterinario</a>
            </td>
            <td>
                <a class="btn  btn-primary table-btn" asp-page=".\EditarVeterinario" asp-route-veterinarioId="@veterinario.Id" >Editar  Veterinario</a>
            </td>
            <td>
                <a class="btn  btn-primary table-btn" asp-page=".\DeleteVeterinario" asp-route-veterinarioId="@veterinario.Id" >Borrar  Veterinario</a>
            </td>
            

        </tr>
    
    }
</table>
<a class="btn  btn-primary table-btn" asp-page=".\EditarVeterinario">Agregar Veterionario</a>